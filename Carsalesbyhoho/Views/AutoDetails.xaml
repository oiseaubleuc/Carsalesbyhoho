<UserControl x:Class="Carsalesbyhoho.Views.AutoDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FF1E1E1E"
             d:DesignHeight="640" d:DesignWidth="360">

    <ScrollViewer>
        <StackPanel Margin="20" VerticalAlignment="Top">

            <!-- Afbeelding -->
            <Border CornerRadius="10" Background="#333" Height="200" Margin="0,0,0,20">
                <Image x:Name="AutoImage"
                       Stretch="UniformToFill"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </Border>

            <!-- Titel -->
            <TextBlock x:Name="TitleText"
                       Text="Merk Model"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <!-- Prijs -->
            <TextBlock x:Name="PriceText"
                       Text="€ 0,00"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#FFEF6C00"
                       Margin="0,0,0,20"/>

            <!-- Beschrijving -->
            <TextBlock x:Name="DescriptionText"
                       Text="Details over bouwjaar, type, status..."
                       Foreground="#DDD"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>

            <!-- Actieknop -->
            <Button Content="Contacteer verkoper"
                    Height="45"
                    Background="#FFEF6C00"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
