<Window x:Class="Carsalesbyhoho.Views.AutoDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto Details" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#121212">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 📷 Afbeelding -->
        <Image Source="{Binding ImagePath}" Height="200" Stretch="UniformToFill" Margin="0,0,0,10"/>

        <!-- 🏷️ Model en prijs -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="{Binding Model}" FontSize="24" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="{Binding Prijs, StringFormat=€{0:N2}}" FontSize="18" Foreground="Orange"/>
        </StackPanel>

        <!-- 📋 Specificaties -->
        <StackPanel Grid.Row="2" VerticalAlignment="Top" Margin="0,10,0,0">
            <TextBlock Text="Specificaties" FontSize="16" Foreground="White" Margin="0,0,0,10"/>

            <StackPanel>
                <TextBlock Foreground="White" Text="Bouwjaar:">
                    <Run Text="{Binding Bouwjaar}" FontWeight="Bold"/>
                </TextBlock>

                <TextBlock Foreground="White" Text="Status:">
                    <Run Text="{Binding Status}" FontWeight="Bold"/>
                </TextBlock>

                <TextBlock Foreground="White" Text="Merk:">
                    <Run Text="{Binding Brand.Naam}" FontWeight="Bold"/>
                </TextBlock>

                <TextBlock Foreground="White" Text="Type:">
                    <Run Text="{Binding AutoType.Naam}" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
