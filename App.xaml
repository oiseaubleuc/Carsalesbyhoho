<Application x:Class="Carsalesbyhoho.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">

    <Application.Resources>



        <!-- 🎨 Kleurenpalet -->
        <SolidColorBrush x:Key="PrimaryBlack" Color="#000000" />
        <SolidColorBrush x:Key="PrimaryWhite" Color="#FFFFFF" />
        <SolidColorBrush x:Key="PrimaryGold" Color="#FFD700" />

        <!-- 🧭 Bottom Navigation Style -->
        <Style x:Key="BottomNavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryWhite}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="8,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryGold}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryGold}" />
                    <Setter Property="Background" Value="#222" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
