<UserControl x:Class="Carsalesbyhoho.Views.AdminDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="640" d:DesignWidth="360"
             Background="#FF1E1E1E">

    <StackPanel Margin="20" VerticalAlignment="Top" Orientation="Vertical">

        <TextBlock Text="Admin Dashboard"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="➕ Voeg Auto Toe"
                    Click="AddCar_Click"
                    Background="#FF0066CC"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="10,5"
                    Margin="0,0,10,0"
                    Width="150"/>
            <Button Content="👥 Gebruikers"
                    Click="ShowUsers_Click"
                    Background="#FFEF6C00"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="10,5"
                    Width="150"/>
        </StackPanel>

        <Border Background="#2A2A2A"
                CornerRadius="10"
                Padding="10"
                Margin="0"
                BorderThickness="1"
                BorderBrush="#333">
            <ContentControl x:Name="DashboardContent"/>
        </Border>
    </StackPanel>
</UserControl>
