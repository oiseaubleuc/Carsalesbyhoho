<UserControl x:Class="Carsalesbyhoho.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E">

    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Stretch" >

            <!-- Login Panel -->
            <StackPanel x:Name="LoginPanel" Visibility="Visible">
                <TextBlock Text="Aanmelden"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="E-mailadres" Foreground="White" />
                <TextBox x:Name="UsernameBox"
                         Height="40"
                         Margin="0,5,0,15"
                         Padding="10"
                         FontSize="14"
                         Background="White"/>

                <TextBlock Text="Wachtwoord" Foreground="White"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="40"
                             Margin="0,5,0,20"
                             Padding="10"
                             FontSize="14"
                             Background="White"/>

                <Button Content="Inloggen"
                        Click="Login_Click"
                        Height="45"
                        FontSize="16"
                        Background="#EF6C00"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <TextBlock HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           Foreground="White"
                           FontSize="14">
                    <Hyperlink Click="RegisterLink_Click">Nog geen account? Registreer hier</Hyperlink>
                </TextBlock>
            </StackPanel>

            <!-- Profile Panel -->
            <StackPanel x:Name="ProfilePanel" Visibility="Collapsed">
                <TextBlock Text="Mijn Profiel"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="NaamText"
                           FontSize="16"
                           Foreground="White"
                           Margin="0,5"/>
                <TextBlock x:Name="EmailText"
                           FontSize="16"
                           Foreground="White"
                           Margin="0,5"/>
                <TextBlock x:Name="RolText"
                           FontSize="16"
                           Foreground="White"
                           Margin="0,5"/>

                <Button Content="Uitloggen"
                        Click="Logout_Click"
                        Height="40"
                        Margin="0,30,0,0"
                        Background="#EF6C00"
                        Foreground="White"
                        FontWeight="Bold"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
