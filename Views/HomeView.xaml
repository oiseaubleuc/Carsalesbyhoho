<UserControl x:Class="Carsalesbyhoho.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FF1E1E1E">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" VerticalAlignment="Top">

            <!-- Titel -->
            <TextBlock Text="Welkom bij Car Marketplace"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <!-- Zoekbalk -->
            <TextBox x:Name="SearchBox"
                     Height="35"
                     FontSize="14"
                     Background="White"
                     Foreground="#333"
                     Margin="0,0,0,10"
                     TextChanged="FilterChanged"/>

            <!-- Filters -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <ComboBox x:Name="BrandFilterBox"
                          Width="160"
                          DisplayMemberPath="Naam"
                          SelectionChanged="FilterChanged"
                          Margin="0,0,10,0"/>
                <ComboBox x:Name="TypeFilterBox"
                          Width="160"
                          DisplayMemberPath="Omschrijving"
                          SelectionChanged="FilterChanged"/>
            </StackPanel>

            <!-- Lijst van gefilterde auto's -->
            <ItemsControl x:Name="FilteredCarList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2A2A2A"
                                CornerRadius="10"
                                Padding="10"
                                Margin="0,0,0,15">
                            <DockPanel>
                                <Image Source="{Binding ImagePath}"
                                       Width="80" Height="60"
                                       Margin="0,0,10,0"
                                       DockPanel.Dock="Left"
                                       Stretch="UniformToFill"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Model}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding Prijs, StringFormat='€ {0:N2}'}"
                                               FontSize="14"
                                               Foreground="#FFEF6C00"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Status}" Foreground="#CCC" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Bouwjaar}" Foreground="#999"/>
                                    </StackPanel>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</UserControl>
