<UserControl x:Class="Carsalesbyhoho.Views.CarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="640" d:DesignWidth="360"
             Background="#FF1E1E1E">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" VerticalAlignment="Top" Orientation="Vertical">

            <TextBlock Text="Beschikbare auto’s"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <ItemsControl x:Name="CarsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2A2A2A"
                                CornerRadius="10"
                                Padding="10"
                                Margin="0,0,0,15">
                            <DockPanel>
                                <Image Width="80"
                                       Height="60"
                                       Margin="0,0,10,0"
                                       DockPanel.Dock="Left"
                                       Stretch="UniformToFill">
                                    <Image.Source>
                                        <BitmapImage UriSource="{Binding ImagePath, FallbackValue='/Images/cars/default.png'}"/>
                                    </Image.Source>
                                </Image>
                                <StackPanel>
                                    <TextBlock Text="{Binding Model}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding Prijs, StringFormat='€ {0:N2}'}"
                                               FontSize="14"
                                               Foreground="#FFEF6C00"
                                               FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <Border Background="#229955"
                                                CornerRadius="5"
                                                Padding="4,1"
                                                Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Status}"
                                                       Foreground="White"
                                                       FontSize="12"/>
                                        </Border>
                                        <TextBlock Text="{Binding Bouwjaar}"
                                                   Foreground="#BBB"
                                                   FontSize="12"/>
                                    </StackPanel>
                                    <Button Content="Details bekijken"
                                            Margin="0,8,0,0"
                                            Padding="6,3"
                                            FontSize="12"
                                            Background="#FFEF6C00"
                                            Foreground="White"
                                            Click="DetailsButton_Click"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Wordt niet gebruikt tenzij je inline details toont -->
            <ContentControl x:Name="AutoDetailsContainer"
                            Margin="0,30,0,0"
                            Visibility="Collapsed"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
