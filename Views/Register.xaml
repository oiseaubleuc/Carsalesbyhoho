<Window x:Class="Carsalesbyhoho.Views.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registreren"
        Height="640"
        Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF6F6F6">

    <Border Padding="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">

            <TextBlock Text="Account Registratie"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" />

            <TextBlock Text="Naam" />
            <TextBox x:Name="NameTextBox"
                     Height="40"
                     Margin="0,5,0,15"
                     Padding="10"
                     FontSize="14"/>

            <TextBlock Text="E-mailadres" />
            <TextBox x:Name="EmailTextBox"
                     Height="40"
                     Margin="0,5,0,15"
                     Padding="10"
                     FontSize="14"/>

            <TextBlock Text="Wachtwoord" />
            <PasswordBox x:Name="PasswordBox"
                         Height="40"
                         Margin="0,5,0,15"
                         Padding="10"
                         FontSize="14"/>

            <TextBlock Text="Bevestig wachtwoord" />
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Height="40"
                         Margin="0,5,0,25"
                         Padding="10"
                         FontSize="14"/>

            <Button Content="Registreren"
                    Click="RegisterButton_Click"
                    Height="45"
                    FontSize="16"
                    Background="#FF0066CC"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Terug naar login (optioneel) -->
            <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="14">
                <Hyperlink Click="BackToLogin_Click">Terug naar login</Hyperlink>
            </TextBlock>

        </StackPanel>
    </Border>
</Window>
