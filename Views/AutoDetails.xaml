<UserControl x:Class="Carsalesbyhoho.Views.AutoDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="640" d:DesignWidth="360"
             Background="#FF1E1E1E">

    <ScrollViewer>
        <StackPanel Margin="20">

            <TextBlock Text="Auto details"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,20"/>

            <Image x:Name="CarImage"
                   Height="180"
                   Stretch="UniformToFill"
                   Margin="0,0,0,20"/>

            <TextBlock Text="Model:" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="ModelTextBlock"
                       Foreground="#FFEF6C00"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Prijs (€):" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="PrijsTextBlock"
                       Foreground="#FFEF6C00"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Bouwjaar:" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="BouwjaarTextBlock"
                       Foreground="#CCC"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Status:" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="StatusTextBlock"
                       Foreground="#229955"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Omschrijving:" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="OmschrijvingTextBlock"
                       TextWrapping="Wrap"
                       Foreground="#888"
                       Margin="0,0,0,10"
                       FontSize="13"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
