<Window x:Class="Carsalesbyhoho.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login"
        Height="640"
        Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF6F6F6">

    <Border Padding="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">

            <TextBlock Text="Login als beheerder"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" />

            <TextBlock Text="Gebruikersnaam" />
            <TextBox x:Name="UsernameBox"
                     Height="40"
                     Margin="0,5,0,15"
                     Padding="10"
                     FontSize="14"/>

            <TextBlock Text="Wachtwoord" />
            <PasswordBox x:Name="PasswordBox"
                         Height="40"
                         Margin="0,5,0,20"
                         Padding="10"
                         FontSize="14"/>

            <Button Content="Inloggen"
                    Click="Login_Click"
                    Height="45"
                    FontSize="16"
                    Background="#FFEF6C00"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Registratielink -->
            <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="14">
                <Hyperlink Click="RegisterLink_Click">Nog geen account? Registreer hier</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Border>
</Window>
